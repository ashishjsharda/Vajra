{
  "name": "vajra",
  "displayName": "Vajra - AI Coding Assistant",
  "description": "Multi-provider AI coding assistant supporting Groq, Ollama and more",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vajra.openChat",
        "title": "Open Vajra Chat",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "vajra.selectProvider",
        "title": "Select AI Provider",
        "icon": "$(settings-gear)"
      },
      {
        "command": "vajra.explainCode",
        "title": "Explain Selected Code",
        "icon": "$(question)"
      }
    ],
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "vajra.chatView",
          "name": "Vajra Chat",
          "icon": "comment-discussion",
          "when": "vajra.chatVisible"
        }
      ]
    },
    "configuration": {
      "title": "Vajra",
      "properties": {
        "vajra.groqApiKey": {
          "type": "string",
          "description": "Groq API Key",
          "markdownDescription": "Your Groq API key. Get one from [Groq Console](https://console.groq.com/)"
        },
        "vajra.ollamaEndpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server endpoint"
        },
        "vajra.huggingfaceApiKey": {
          "type": "string",
          "description": "HuggingFace API Key (optional)"
        },
        "vajra.geminiApiKey": {
          "type": "string",
          "description": "Google Gemini API Key",
          "markdownDescription": "Your Google AI API key. Get one from [Google AI Studio](https://makersuite.google.com/app/apikey)"
        },
        "vajra.openrouterApiKey": {
          "type": "string",
          "description": "OpenRouter API Key",
          "markdownDescription": "Your OpenRouter API key. Get one from [OpenRouter](https://openrouter.ai/keys)"
        },
        "vajra.defaultProvider": {
          "type": "string",
          "enum": ["groq", "ollama", "deepseek", "gemini", "codellama", "openrouter", "huggingface"],
          "default": "groq",
          "description": "Default AI provider"
        },
        "vajra.defaultModel": {
          "type": "string",
          "default": "llama-3.1-8b-instant",
          "description": "Default model to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}